{
	"name": "handy-variation-swatches",
	"version": "1.0.0",
	"description": "Handy Variation Swatches is a powerful WooCommerce plugin that replaces dull dropdowns with vibrant color swatches, stylish buttons, and image-based options making product selection clearer, faster, and more visually engaging for your customers.",
	"main": "app.js",
	"scripts": {
		"build": "wp-scripts build --webpack-src-dir=resources --output-path=public",
		"start": "wp-scripts start --webpack-src-dir=resources --output-path=public",
		"lint:js": "wp-scripts lint-js resources/**/*.js",
		"lint:js:fix": "wp-scripts lint-js resources/**/*.js --fix",
		"lint:scss": "wp-scripts lint-js resources/**/*.scss",
		"lint:scss:fix": "wp-scripts lint-js resources/**/*.scss --fix",
		"lint:admin:js": "wp-scripts lint-js resources/admin/scripts/**/*.js",
		"lint:admin:js:fix": "wp-scripts lint-js resources/admin/scripts/**/*.js --fix",
		"lint:admin:scss": "wp-scripts lint-style resources/admin/styles/**/*.scss",
		"lint:admin:scss:fix": "wp-scripts lint-style resources/admin/styles/**/*.scss --fix",
		"lint:client:js": "wp-scripts lint-js resources/client/scripts/**/*.js",
		"lint:client:js:fix": "wp-scripts lint-js resources/client/scripts/**/*.js --fix",
		"lint:php": "cd vendor/bin/ && phpcs -s ",
		"lint:php:fix": "cd vendor/bin/ && phpcbf ",
		"lint:md:docs": "wp-scripts lint-md-docs",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"test:unit:js": "wp-scripts test-unit-js",
		"test:unit:php": "php vendor/bin/phpunit",
    "format": "wp-scripts format ./resources/",
    "check-engines": "wp-scripts check-engines",
		"check-licenses": "wp-scripts check-licenses",
    "packages-update": "wp-scripts packages-update"
	},
	"author": "Mafel John Cahucom",
	"license": "GPL-3.0-or-later",
	"devDependencies": {
		"@wordpress/scripts": "^29.0.0",
		"path": "^0.12.7",
		"webpack-remove-empty-scripts": "^1.0.4"
	}
}
